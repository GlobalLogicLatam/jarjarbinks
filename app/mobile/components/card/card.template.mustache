<div class="js-card card device-{{state}}">
  <div class="card__image">
    <i class="card__icon glyphicon glyphicon-unlock"></i>
    <i class="card__icon glyphicon glyphicon-lock"></i>
  </div>
  <div class="card__content-wrapper">
    <span class="card__title">
      {{name}}
    </span>
    <span class="card__subtitle">
      {{stateName}}
    </span>
    <span class="card__footer">
      {{footer}}
    </span>

  </div>
  <i class="card__dropdown-button">
      <ul class="card__dropdown">
        <li class="js-edit-button card__option">Editar</li>
        <li class="js-delete-button card__option">Eliminar</li>
      </ul>
      <div class="card__dropdown-background">
      </div>
  </i>
</div>
